<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/common_item_back"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:id="@+id/item_layout"
        android:layout_marginStart="20dp"
        >
        <com.anshi.healthdeyi.view.self.EaseImageView
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            app:ease_shape_type="rectangle"
            app:ease_radius="2dp"
            android:id="@+id/recommend_img"
            android:src="@drawable/ease_default_image"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="30dp"
            android:textSize="16sp"
            android:id="@+id/recommend_name"
            android:textColor="@color/black"
            />
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:id="@+id/divider"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:background="@color/smssdk_line_light_gray"
        android:layout_below="@id/item_layout"
        />
</RelativeLayout>