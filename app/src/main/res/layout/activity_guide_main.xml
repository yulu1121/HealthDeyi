<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <com.youth.banner.Banner
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:is_auto_play="false"
        app:indicator_height="12dp"
        app:indicator_width="12dp"
        app:indicator_drawable_selected="@drawable/oval_selected"
        app:indicator_drawable_unselected="@drawable/oval_unselected"
        app:indicator_margin="4dp"
        app:banner_layout="@layout/banner_self"
        app:image_scale_type="fit_xy"
        android:id="@+id/guide_banner"
        />
    <Button
        android:layout_width="80dp"
        android:layout_height="30dp"
        android:layout_gravity="bottom|center"
        android:text="@string/now_go"
        android:id="@+id/now_go"
        android:onClick="toMain"
        android:visibility="invisible"
        android:layout_marginBottom="15dp"
        android:textColor="@color/black"
        android:background="@drawable/in_button_bg"

        />

</FrameLayout>